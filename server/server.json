{
    "apps": [
        {
            "name": "diff-keeper",
            "script": "server/server.js",
            "watch": [
                "**/*.js"
            ],
            "log_date_format": "YYYY-MM-DD HH:mm",
            "restart_delay": 4000,
            "max_restarts": 10,
            "args": [
                "--color"
            ],
            "env": { 
                "DEBUG_COLORS": true 
            }
        }
    ]
}